@model LibraryManagementSystem.Models.Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Update Category</h1>
<hr />
<form asp-action="UpdateCategory" method="post">
    <input type="hidden" asp-for="CategoryId" />

    <div class="form-group">
        <label asp-for="CategoryName">Category Name</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Category</button>
</form>

<a asp-action="Category" class="btn btn-secondary mt-2">Back to Category</a>