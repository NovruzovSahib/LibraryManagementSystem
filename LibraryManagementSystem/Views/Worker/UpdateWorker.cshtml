@model LibraryManagementSystem.Models.Worker
@{
    ViewData["Title"] = "UpdateWorker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Update Worker</h1>
<hr />
<form asp-action="UpdateWorker" method="post">
    <input type="hidden" asp-for="WorkerId" />

    <div class="form-group">
        <label asp-for="WorkerName">Worker Name</label>
        <input asp-for="WorkerName" class="form-control" />
        <span asp-validation-for="WorkerName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Worker</button>
</form>

<a asp-action="Reader" class="btn btn-secondary mt-2">Back to Worker</a>