@model RegisterViewModel
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<title>Register</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/css/style.css">
	<style>
		span {
			color: red
		}
	</style>
</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<div class="icon d-flex align-items-center justify-content-center">
							<span class="fa fa-user-o"></span>
						</div>
						<h3 class="text-center mb-4">Sign Up</h3>
						<form class="login-form text-center" method="post">
							<div class="form-group">
								<input type="text" class="form-control rounded-left" placeholder="Username" asp-for="@Model.Username">
								<span asp-validation-for="@Model.Username"></span>
							</div>
							<div class="form-group">
								<input type="text" class="form-control rounded-left" placeholder="E-mail" asp-for="@Model.Email">
								<span asp-validation-for="@Model.Email"></span>
							</div>
							<div class="form-group">
								<input type="password" class="form-control rounded-left" placeholder="Password" asp-for="@Model.Password">
								<span asp-validation-for="@Model.Password"></span>
							</div>
							<div class="form-group">
								<input type="password" class="form-control rounded-left" placeholder="Confirm Password" asp-for="@Model.ConfirmPassword">
								<span asp-validation-for="@Model.ConfirmPassword"></span>
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary rounded submit px-3">Register</button>
							</div>
						</form>
						<form>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary rounded submit px-3" asp-action="Login" asp-controller="Account">Already Signed Up?</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/js/jquery.min.js"></script>
	<script src="~/js/popper.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/main.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
</body>
</html>

