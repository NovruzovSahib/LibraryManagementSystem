@model LibraryManagementSystem.Models.Book
@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="text-align:center">Add Books To Library</h1>
<hr />
<form asp-action="AddBook" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Book Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category Name</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))" class="form-control">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorId">Author Name</label>
        <select asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors, "Value", "Text"))" class="form-control">
            <option value="">Select an author</option>
        </select>
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Book Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Language">Language</label>
        <input asp-for="Language" class="form-control" />
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PageCount">Page Count</label>
        <input asp-for="PageCount" class="form-control" />
        <span asp-validation-for="PageCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublicationDate">Publication Date</label>
        <input asp-for="PublicationDate" class="form-control" />
        <span asp-validation-for="PublicationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImagePath">Book Image</label>
        <input type="file" name="file" accept="image/*" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary" style="width:100%">Add Book</button>
</form>
